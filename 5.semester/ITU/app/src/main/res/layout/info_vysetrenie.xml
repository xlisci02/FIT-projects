                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
    </TableRow>

    <TableRow>
        <TextView
                android:textSize="16dip"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lekár:"/>

        <TextView
                android:id="@+id/lblListItem111"
                android:textSize="16dip"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "/>
    </TableRow>

    <TableRow>
        <TextView
                android:textSize="16dip"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dátum a čas:"/>

        <TextView
                android:id="@+id/lblListItem211"
                android:textSize="16dip"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
        />
    </TableRow>

    <TableRow>
        <TextView
                android:textSize="16dip"
                android:textStyle="bold"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresa:"
        />

        <TextView
                android:id="@+id/lblListItem311"
                android:textSize="16dip"
