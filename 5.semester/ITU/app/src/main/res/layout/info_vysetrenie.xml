                android:paddingBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
        />
    </TableRow>
    <TableRow android:layout_marginTop="10dp">
        <Button
                android:textColor="#fff"
                android:background="@drawable/editbutton"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="UPRAVIŤ" android:layout_marginLeft="30dp" android:layout_marginRight="-60dp"/>
        <Button
                android:textColor="#fff"
                android:background="@drawable/deletebutton"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="ZMAZAŤ" android:layout_marginRight="40dp"/>
    </TableRow>


</TableLayout>